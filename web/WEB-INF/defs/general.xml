<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="common" template="/WEB-INF/layout/classic.jsp">
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
        <!--<put-attribute name="current" value="index"/>-->
    </definition>

    <definition name="index" extends="common">
        <put-attribute name="title" value="Spring CRM" />
        <put-attribute name="body" value="/WEB-INF/views/index.jsp" />
        <put-attribute name="current" value="index" cascade="true"/>
    </definition>

    <definition name="accounts/list" extends="common">
        <put-attribute name="title" value="Accounts" />
        <put-attribute name="body" value="/WEB-INF/views/accounts/list.jsp" />
        <put-attribute name="current" value="accounts" cascade="true"/>
    </definition>

    <definition name="register" extends="common">
        <put-attribute name="title" value="Register" />
        <put-attribute name="body" value="/WEB-INF/views/register.jsp" />
        <put-attribute name="current" value="register" cascade="true"/>
    </definition>

    <definition name="login" extends="common">
        <put-attribute name="title" value="Login" />
        <put-attribute name="body" value="/WEB-INF/views/login.jsp" />
        <put-attribute name="current" value="login" cascade="true"/>
    </definition>
</tiles-definitions>